<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="text-center">
    <h3 class="text-primary">Editando <%= resource_name.to_s.humanize %></h3>
  </div>

  <div class="mb-3">
    <%= f.label :email, t('devise.registrations.form.email'), class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.form.text.confirmation') %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, t('devise.registrations.form.password'), class: 'form-label' %> <i><%= t('devise.registrations.form.text.password') %></i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, t('devise.registrations.form.current_password'), class: 'form-label' %> <i><%= t('devise.registrations.form.text.current_password') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.form.edit.submit'), class: "btn btn-primary" %>
  </div>
<% end %>

<h3><%= t('devise.registrations.form.title.cancel') %></h3>

<div><%= t('devise.registrations.form.title.unhappy') %> <%= button_to t('devise.registrations.form.title.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %> </div>

<%= link_to t('flash.links.back'), :back, class: "btn btn-default" %>
